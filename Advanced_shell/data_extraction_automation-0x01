#!/bin/bash

# Check if data.json exists
if [ ! -f data.json ]; then
  echo "data.json not found. Please run the API request script first."
  exit 1
fi

# Extract values
name=$(jq -r '.name' data.json | sed 's/.*/\u&/')  # Capitalize name
height=$(jq -r '.height' data.json)
weight=$(jq -r '.weight' data.json)
type=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')  # Capitalize type

# Convert height (decimetres to metres) and weight (hectograms to kg)
formatted_height=$(awk "BEGIN { printf \"%.1f\", $height / 10 }")
formatted_weight=$(awk "BEGIN { printf \"%.0f\", $weight / 10 }")

# Final expected output
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."

